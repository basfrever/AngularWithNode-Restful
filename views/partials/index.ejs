<h3>Car Details</h3>
<hr>
<table class="table-bordered">
    <a href="#/addcar">Add New</a>
    <tr>
        <th>Name</th>    
        <th>Model</th>    
        <th>Company</th>    
        <th>YearOfManufacturing</th>
        <th>Action</th>
    </tr> 
    <tr ng-repeat="c in carsData">
    <td ng-bind="c.name"></td>
    <td ng-bind="c.model"></td>
    <td ng-bind="c.company"></td>
    <td ng-bind="c.yearofmanufacturing"></td> 
    <td><span><a href="#/" ng-click="edit(c._id)">Edit</a></span>&nbsp;<span><a href="#/" ng-click="delete(c._id)">Delete</a></span></td>    
    </tr>
</table>
<div ng-show="card">
<di>
<p>Name<span><input type="text" ng-model="card.name"></span></p>
    <p>Model<span><input type="text" ng-model="card.model"></span></p>
    <p>Company<span><input type="text" ng-model="card.company"></span></p>
    <p>WeightCapacity<span><input type="text" ng-model="card.yearofmanufacturing"></span></p>
<input type="button" ng-click="update(card._id)" value="Update">
</di>

</div>
